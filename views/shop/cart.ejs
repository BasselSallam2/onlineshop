<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/product.css">
</head>

<body>
    <%- include('../includes/navigation.ejs') %>

    <main>
        <% if (prods.length > 0) { %>
            <div class="grid">
                <% for (let item of prods) { %>
                    <article class="card product-item">
                        <header class="card__header">
                            <h1 class="product__title"><%= item.products.title %></h1>
                        </header>
                        <div class="card__image">
                            <img src="<%= item.products.URL %>" alt="<%= item.products.title %>">
                        </div>
                        <div class="card__content">
                            <h2 class="product__price">$<%= item.totalprice %> <span>Total Cost</span></h2>
                            <p class="product__description">Quantity: <%= item.products.qty %></p>

                            <!-- Delete Button Form -->
                            <form action="/cartDeleted" method="POST">
                                <input type="hidden" name="product_id" value="<%= item.products.id %>">
                                <button type="submit" class="delete-button">Delete</button>
                            </form>
                        </div>
                    </article>
                <% } %>
            </div>
        <% } else { %>
            <h1>Your Cart Is Empty!</h1>
        <% } %>
        
        <!-- Checkout Section -->
        <% if (prods.length > 0) { %>
            <div class="checkout">
                <div class="checkout-total">
                    <h3>Total of Cart:</h3>
                    <!-- Calculate the total cost of the cart -->
                    <% let totalCartPrice = 0; %>
                    <% prods.forEach(item => { totalCartPrice += item.totalprice; }); %>
                    <h2>$<%= totalCartPrice %></h2>
                </div>

                <!-- Checkout Form -->
                <form action="/checkOUT" method="POST">
                    <button type="submit" class="checkout-button">Checkout</button>
                </form>
            </div>
        <% } %>
    </main>

<%- include('../includes/end.ejs') %>
